<form class="{{cssClass}} actor-sheet" id="character-sheet" autocomplete="off">
    <header>
        {{> "systems/hackmaster5e/templates/actor/parts/header/base-header.hbs"}}
    </header>

    <section class="sheet-middle">
        {{> "systems/hackmaster5e/templates/actor/parts/middle/base-middle.hbs"}}
    </section>

    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="skills">{{localize "HM.skills"}}</a>
        <a class="item" data-tab="combat">{{localize "HM.combat"}}</a>
        <a class="item" data-tab="spells">{{localize "HM.spells"}}</a>
        <a class="item" data-tab="inventory">{{localize "HM.inventory"}}</a>
        <a class="item" data-tab="biography">{{localize "HM.biography"}}</a>
        <a class="item" data-tab="effects">{{localize "HM.effects"}}</a>
        <a class="item" data-tab="setup">{{localize "HM.setup"}}</a>
    </nav>

    <section class="sheet-body scrollable">
        <div class="tab skills" data-group="primary" data-tab="skills">
            {{> "systems/hackmaster5e/templates/actor/parts/skills/base-skills.hbs"}}
        </div>

        <div class="tab base-combat" data-group="primary" data-tab="combat">
            {{> "systems/hackmaster5e/templates/actor/parts/combat/base-combat.hbs"}}
        </div>

        <div class="tab spells" data-group="primary" data-tab="spells">
            {{> "systems/hackmaster5e/templates/actor/parts/spells/base-spells.hbs"}}
        </div>

        <div class="tab items" data-group="primary" data-tab="inventory">
            {{> "systems/hackmaster5e/templates/actor/parts/inventory/base-inventory.hbs"}}
        </div>

        <div class="tab biography" data-group="primary" data-tab="biography">
            {{> "systems/hackmaster5e/templates/actor/parts/bio.hbs"}}
        </div>

        <div class="tab base-effects" data-group="primary" data-tab="effects">
            {{> "systems/hackmaster5e/templates/actor/parts/effects/base-effects.hbs"}}
        </div>

        <div class="tab base-setup" data-group="primary" data-tab="setup">
            {{> "systems/hackmaster5e/templates/actor/parts/setup/base-setup.hbs"}}
        </div>
    </section>
</form>
