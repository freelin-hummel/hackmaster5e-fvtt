<section class='setup-abilities'>
{{#with data.system.priors}}
    <label class='resource-label'>Priors and Particulars</label>
    <section class='newform grid-2col' style='padding-top: 2px; grid-template-columns: 40% 1fr;'>
        <span>
            <span class='form-option'>
                <label class='resource-label'>{{localize 'HM.sex'}}</label>
                <input type='text' style='width: 6em;' name='system.priors.sex' value='{{sex}}' data-dtype='String'/>
            </span>
            <span class='form-option'>
                <label class='resource-label'>{{localize 'HM.age'}}</label>
                <input type='number' name='system.priors.age' value='{{age}}' data-dtype='Number'/>
            </span>
            <span class='form-option'>
            <label class='resource-label'>{{localize 'HM.height'}}</label>
            <input type='number' name='system.priors.height' value='{{height}}' data-dtype='Number'/>
            </span>
            <span class='form-option'>
            <label class='resource-label'>{{localize 'HM.bmi'}}</label>
            <input type='number' name='system.priors.bmi' value='{{bmi}}' data-dtype='Number'/>
            </span>
        </span>
        <span>
            <span class='form-option'>
                <label class='resource-label'>{{localize 'HM.alignment'}}</label>
                <select name='system.priors.alignment'>
                    {{selectOptions (findConfigObj 'alignment') selected=alignment localize=true}}
                </select>
            </span>
            <span class='form-option'>
                <label class='resource-label'>{{localize 'HM.handedness'}}</label>
                <select name='system.priors.handedness'>
                    {{selectOptions (findConfigObj 'handedness') selected=handedness localize=true}}
                </select>
            </span>
            <span class='form-option'>
                <label class='resource-label'>{{localize 'HM.hair'}}</label>
                <input type='text' style='width: 8em;' name='system.priors.hair' value='{{hair}}' data-dtype='String'/>
            </span>
            <span class='form-option'>
                <label class='resource-label'>{{localize 'HM.eyes'}}</label>
                <input type='text' style='width: 8em;' name='system.priors.eyes' value='{{eyes}}' data-dtype='String'/>
            </span>
        </span>
    </section>
    <section class='newform'>
        <span class='form-option'>
            <label class='resource-label'>{{localize 'HM.deity'}}</label>
            <input type='text' style='width: 21em;' name='system.priors.gawd' value='{{gawd}}' data-dtype='String'/>
        </span>
    </section>
{{/with}}
</section>
