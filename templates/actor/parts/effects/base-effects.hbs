<section class='hmstyle'>
<table class='table-basic'>
    <thead>
        <th style='text-align: left; padding-left: 5px;'>{{localize 'HM.UI.name'}}</th>
        <th style='text-align: left;' class='mobile-hidden'>{{localize 'HM.type'}}</th>
        <th style='text-align: left;' class='mobile-hidden'>{{localize 'HM.UI.key'}}</th>
        <th style='text-align: left;'>{{localize 'HM.UI.value'}}</th>
        <th style='text-align: left;' class='mobile-hidden'>{{localize 'HM.UI.duration'}}</th>
        <th style='text-align: left;' class='mobile-hidden'>{{localize 'HM.UI.mode'}}</th>
        <th style='text-align: left;'>{{localize 'HM.disabled'}}</th>
    </thead>
    <tbody>
{{#each actor.processedEffects}}{{#with this}}
    {{#each changes}}
    <tr>
        <td data-label="{{localize 'HM.UI.name'}}">{{../name}}</td>
        <td data-label="{{localize 'HM.type'}}" class='mobile-hidden'>{{localize (findConfigValue 'affix' ../type)}}</td>
        <td data-label="{{localize 'HM.UI.key'}}" class='mobile-hidden'>{{key}}</td>
        <td style="text-align: right; padding-right: 1em;" data-label="{{localize 'HM.UI.value'}}">
            {{#if mode}}{{value}}
            {{else}}{{displayValue}}
            {{/if}}
        </td>
        <td data-label="{{localize 'HM.UI.duration'}}" class='mobile-hidden'>{{#with ../duration}}
            {{#if remaining includeZero=true}}
                {{ceil remaining}}
                {{#if (eq remaining 1)}}
                    {{toLowerCase (localize 'HM.second')}}
                {{else}}
                    {{toLowerCase (localize 'HM.seconds')}}
                {{/if}}
            {{else}}
                {{localize 'HM.none'}}
            {{/if}}
            {{/with}}
        </td>
        <td data-label="{{localize 'HM.UI.mode'}}" class='mobile-hidden'>{{localize (findConfigValue 'effectModes' mode)}}</td>
        {{#if ../flags.core.statusId}}
        <td data-label="{{localize 'HM.disabled'}}" style='text-align: left;'>
        {{else}}
        <td data-label="{{localize 'HM.disabled'}}" class='button' style='text-align: left;' data-item-id={{../id}}>
        {{/if}}
        {{localize (concat 'HM.' ../disabled)}}
        </td>
    </tr>
    {{/each}}
{{/with}}{{/each}}
    </tbody>
</table>
</section>
