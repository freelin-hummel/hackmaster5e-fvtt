{{#if (findBonus 'total' this) includeZero=true}}
<li class="card">
    <summary>
        <header>
            <label for="{{this}}">
                <img src="{{findConfigValue "savesImg" this}}" title="{{this}}" height=32"/>
                <h4 class="card-name">{{localize (findConfigValue "saves" @this)}}</h4>
            </label>
        </header>
        <input class="rollable" type="number" value="{{findBonus 'total' this}}" readonly="true"
            data-dialog="save" data-formula-type="{{this}}"
        /> 
    </summary>
</li>
{{/if}}
