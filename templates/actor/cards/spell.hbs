<li class="item card hmstyle" data-item-id="{{_id}}">
    <summary>
        <header>
            <label for="{{name}}">
                <img src="{{img}}" title="{{name}}" width="28" height="28"/>
                <label class="spell-level resource-label">{{localize (concat "HM.spellLevelsAbbr." system.lidx)}}</label>
                <h4 class="item-name">{{name}}</h4>
            </label>
        </header>
        <section class='spell-controls'>
            <div class='card-controls' style='padding: 4px;'>
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
            <img class="imgbutton spell-prep" src="{{findConfigValue "combatImg" "prep"}}" title="Prepare"
                data-item-prepare=true
                data-item-id="{{_id}}">
{{#unless system.divine}}
            <img class="rollable imgbutton" src="{{findConfigValue "combatImg" "cast"}}" title="Cast"
                data-dialog="cast"
                data-item-divine={{system.divine}}
                data-item-id="{{_id}}">
{{/unless}}
        </section>
    </summary>
</li>
