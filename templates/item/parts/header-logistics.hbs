<section class='card'>
    <header><label for='{{name}}'>
        <img class='profile-img' src='{{item.img}}' data-edit='img' title='{{item.name}}' width='64'/>
        <h1 class='itemname'><input name='name' type='text' size=48 value='{{item.name}}' placeholder='Name'/></h1>
    </label></header>
</section>

{{#with data}}
<section class='grid-3col newform' style='margin: 5px;'>
    <span class='form-data'>
        <label class='resource-label'>{{localize 'HM.qty'}}</label>
        {{#if (eq type 'item')}}
            <input type='number' name='system.qty' value='{{system.qty}}' data-dtype='Number'/>
        {{else}}
            <input type='number' disabled value='1'/>
        {{/if}}
    </span>
    <span class='form-data'>
        <label class='resource-label'>{{localize 'HM.weight'}}</label>
        <input type='number' name='system.weight' value='{{system.weight}}' data-dtype='Number'/>
    </span>
    <span class='form-data'>
        <label class='resource-label'>{{localize 'HM.price'}}</label>
        <input type='text' name='system.price' value='{{system.price}}' data-dtype='String'/>
    </span>
    <span class='form-data'>
        <label class='resource-label'>{{localize 'HM.avail.high'}}</label>
        <input type='number' name='system.avail.high' value='{{system.avail.high}}' data-dtype='Number'/>
    </span>
    <span class='form-data'>
        <label class='resource-label'>{{localize 'HM.avail.med'}}</label>
        <input type='number' name='system.avail.med' value='{{system.avail.med}}' data-dtype='Number'/>
    </span>
    <span class='form-data'>
        <label class='resource-label'>{{localize 'HM.avail.low'}}</label>
        <input type='number' name='system.avail.low' value='{{system.avail.low}}' data-dtype='Number'/>
    </span>
</section>
{{/with}}
