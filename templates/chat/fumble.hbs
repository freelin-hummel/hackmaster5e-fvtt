{{#with resp}}
    {{localize 'HM.attack'}}: <b>{{atk}}</b><br>
    {{localize 'HM.defense'}}: <b>{{def}}</b>
    <hr>
    {{localize 'HM.result'}}:
    <b>{{localize (concat 'HM.FUMBLE.type.' type '.' typeIdx)}}</b><br>
    {{#if (lt typeIdx 10)}}
        {{localize 'HM.details'}}:
        <b>{{{localize (concat 'HM.FUMBLE.label.' type '.' rollIdx)}}}</b><br>
    {{/if}}
    {{#if (eq sprainRoll.total 1)}}{{localize 'HM.complication'}}: 
    <b>{{localize (concat 'HM.FUMBLE.sprain.' sprain)}}</b><br>
    {{/if}}
    {{#if freeAttack}}<hr><b>{{localize 'HM.chatCard.fcounter'}}</b>{{/if}}
{{/with}}
