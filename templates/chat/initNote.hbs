<div class='hm-chat-note noWhisper'>
    {{#each this}}
    <section class='hm-chat-note-row'>
        <span>
            <b>{{delta}}</b><i class='fa fa-hourglass-half'></i>
            {{name}}
            {{#if (gt newInit oldInit)}}
            ({{oldInit}} <i class='fa fa-arrow-right'></i> {{newInit}})
            {{else}}
            ({{newInit}} <i class='fa fa-arrow-left'></i> {{oldInit}})
            {{/if}}
        </span>
        {{#unless @index}}
        <a class='button message-delete'><i class='fas fa-trash'></i></a>
        {{/unless}}
    </section>
    {{/each}}
</div>
