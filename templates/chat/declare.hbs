{{#if (eq dialog 'cast')}}
    {{localize 'HM.spell'}}: <b>{{context.name}}</b><br>
    {{localize 'HM.components'}}: <b>{{resp.components}}</b><br>
    {{#unless context.system.divine}}
        {{localize 'HM.cost'}}: <b>{{resp.cost}} {{localize 'HM.sp'}}</b>
        {{#if resp.schedule}}+ <b>{{resp.schedule}} {{localize 'HM.sp'}}</b>{{/if}}<br>
    {{/unless}}
    {{#if resp.advance}}
        {{localize 'HM.speed'}}: <b>{{resp.advance}}</b><br>
    {{/if}}
<div class='dice-roll'>
    <div class='dice-flavor'>
        {{localize (concat 'HM.spellLevels.' context.system.lidx)}} {{localize 'HM.level'}}
        {{#if context.system.divine}}
            {{localize 'HM.clerical'}}
        {{else}}
            {{localize 'HM.mage'}}
        {{/if}}
            {{localize 'HM.spell'}} ({{toLowerCase (localize 'HM.preparing')}})
    </div>
</div>
{{else}}
    {{localize 'HM.weapon'}}: <b>{{context.name}}</b><br>
    {{localize 'HM.speed'}}: {{context.system.bonus.total.spd}}
<div class='dice-roll'>
    <div class='dice-flavor'>
        {{localize 'HM.ranged'}} {{localize 'HM.attack'}} ({{localize 'HM.preparing'}})
    </div>
</div>
{{/if}}
