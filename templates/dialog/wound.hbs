<form class='hackmaster'>
    <div class='form-group'>
        <label>{{localize 'HM.dialog.setWoundHP'}}</label>
        <input name='hp' value='{{hp}}' class='focus bind' data-prop='hp' type='number' placeholder='0'/>
    </div>

{{#if (getSetting 'hackmaster5e' 'armorDegredation')}}
    <div class='form-group'>
        <label style="padding-right: 10px;">{{localize 'HM.dialog.setWoundArmor'}}</label>
        <input name='armorDamage' value='{{armorDamage}}' class='bind' data-prop='armorDamage' type='number' placeholder='0'/>
    </div>
{{/if}}

    <div class='form-group'>
        <label>{{localize 'HM.dialog.setWoundToP'}}</label>
        <input name='assn' value='{{assn}}' class='bind' data-prop='assn' type='number' placeholder='0'/>
    </div>

    <hr>
    <div class='form-group'>
        <label>{{localize 'HM.dialog.barbed'}}</label>
        <input type='checkbox' class='bind' data-prop='isEmbedded' {{checked isEmbedded}} data-render=true>
    </div>

    <div class='form-group'>
        <label>{{localize 'HM.dialog.embedLevel'}}</label>
        <select
            name='embed'
            {{#unless isEmbedded}}disabled{{/unless}}
            class='bind'
            data-prop='embed'
            data-render='true'
        >
            {{selectOptions (findConfigObj 'embedSelect') selected=embed localize=true}}
        </select>
    </div>
    <hr>
    <div class='form-group' style='padding-bottom: 5px;'>
        <input
            style='max-width: unset; text-align: left;'
            type='text'
            class='bind note'
            data-prop='note'
            placeholder='{{localize "HM.dialog.optNote"}}'
        />
    </div>
    <section class='dialog-buttons'>
        <button type='submit' class='dialog-button normal default'>
            {{localize 'HM.dialog.setWoundTitle'}}
        </button>
    </section>
</form>
